{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    //
    // See https://linux.die.net/man/1/r
    // for R options
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "type": "shell",
            "command": "R -q -e 'devtools::document(quiet = F); devtools::install(quiet = F)'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Check project",
            "type": "shell",
            "command": "R -q -e 'devtools::check(quiet = T)'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test project",
            "type": "shell",
            "command": "R -q -e 'devtools::test(quiet = T)'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Import data into project",
            "type": "shell",
            "command": "R -q -e 'for (file in dir(\"./data-raw\", full.names = TRUE)) source(file)'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
